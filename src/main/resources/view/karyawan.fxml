<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.KaryawanController"
            style="-fx-background-color: linear-gradient(to right, #e3f2fd, #bbdefb);">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #1976d2; -fx-padding: 20px;">
            <Label text="Dashboard Karyawan"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <HBox spacing="40" alignment="TOP_CENTER" style="-fx-padding: 40px;">
            <!-- KIRI -->
            <VBox spacing="30" HBox.hgrow="ALWAYS" style="-fx-pref-width: 200%;">
                <!-- Absensi Card -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25px; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(33,150,243,0.08), 12, 0, 0, 6);">
                    <Label text="Absensi Kehadiran" style="-fx-font-size: 20px; -fx-text-fill: #1976d2; -fx-font-weight: bold;" />
                    <Button fx:id="btnAbsensi" text="Isi Absensi"
                            onAction="#handleAbsensi"
                            style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180px;" />
                    <Label fx:id="labelStatus"
                           style="-fx-text-fill: #2e7d32; -fx-font-size: 14px;" />
                </VBox>
                <!-- Cuti Card -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25px; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(2,136,209,0.10), 12, 0, 0, 6);">
                    <Label text="Pengajuan Cuti" style="-fx-font-size: 20px; -fx-text-fill: #0288d1; -fx-font-weight: bold;" />
                    <TextField fx:id="fieldCuti" promptText="Alasan Cuti"
                               style="-fx-pref-width: 260px;" />
                    <HBox spacing="12" alignment="CENTER">
                        <Button fx:id="btnAjukanCuti" text="Ajukan Cuti"
                                onAction="#handleAjukanCuti"
                                style="-fx-background-color: #0288d1; -fx-text-fill: white;" />
                        <Button text="Lihat Status Cuti"
                                onAction="#handleLihatCuti"
                                style="-fx-background-color: #0097a7; -fx-text-fill: white;" />
                    </HBox>
                    <TextArea fx:id="areaCutiStatus" promptText="Status Pengajuan Cuti"
                              style="-fx-pref-width: 300px; -fx-pref-height: 70px; -fx-background-color: #e3f2fd;" />
                </VBox>
            </VBox>
            <!-- KANAN -->
            <VBox spacing="30" HBox.hgrow="ALWAYS" style="-fx-pref-width: 100%;">
                <VBox spacing="18" style="-fx-background-color: white; -fx-padding: 32px 28px; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(76,175,80,0.14), 12, 0, 0, 6);">
                    <Label text="Info Gaji"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #388e3c;" />
                    <Button fx:id="btnLihatGaji" text="Lihat Gaji"
                            onAction="#handleLihatGaji"
                            style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-font-weight: bold;" />
                    <Label fx:id="labelGaji"
                           style="-fx-font-size: 16px; -fx-text-fill: #004d40; -fx-font-weight: bold;" />
                    <TableView fx:id="tableRiwayatAbsensi" style="-fx-pref-height: 200px; -fx-background-color: #f1f8e9;">
                        <columns>
                            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="100"/>
                            <TableColumn fx:id="colJam" text="Jam" prefWidth="90"/>
                            <TableColumn fx:id="colKeterangan" text="Keterangan" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </HBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 0px; -fx-background-color: #000000;">
            <StackPane fx:id="marqueePane" style="-fx-pref-height: 40px; -fx-background-color: white; -fx-alignment: center-left;" HBox.hgrow="ALWAYS">
                <Label fx:id="marqueeLabel" text="Selamat datang di Dashboard Karyawan! Jangan lupa absen dan cek status cuti Anda."
                       style="-fx-font-size: 16px; -fx-text-fill: #1976d2;" />
            </StackPane>
            <Button text="Keluar" onAction="#handleLogout"
                    style="-fx-background-color: #ff0000; -fx-text-fill: white;" />
        </HBox>
    </bottom>
</BorderPane>