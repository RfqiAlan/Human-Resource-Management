<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LoginController">
    <Label text="Login HRMS" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <HBox spacing="10">
        <Button text="Login sebagai Admin" onAction="#handleLoginAsAdmin" />
        <Button text="Login sebagai Karyawan" onAction="#handleLoginAsKaryawan" />
    </HBox>
</VBox>
