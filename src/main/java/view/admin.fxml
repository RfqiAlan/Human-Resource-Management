<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AdminController" spacing="10" alignment="CENTER">
    <Label text="Dashboard Admin" />
    <TextField fx:id="newUsername" promptText="Username Karyawan" />
    <PasswordField fx:id="newPassword" promptText="Password" />
    <TextField fx:id="newGaji" promptText="Gaji Per Hari" />
    <Button fx:id="btnDaftar" text="Daftarkan Karyawan" onAction="#handleDaftar" />
    <Button text="Lihat Absensi Hari Ini" onAction="#handleLihatAbsensiHariIni" />
    <TextArea fx:id="areaAbsensiHariIni" promptText="Absensi Hari Ini" />
    <TextArea fx:id="areaStatus" promptText="Status" editable="false" />
</VBox>